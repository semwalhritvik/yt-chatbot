{
  "manifest_version": 3,
  "name": "YouTube RAG Chatbot",
  "version": "1.0",
  "description": "Chat with YouTube videos using RAG in the Side Panel.",
  "permissions": [
    "sidePanel",
    "activeTab",
    "tabs"
  ],
  "host_permissions": [
    "http://localhost:5000/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Open Chatbot"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  }
}